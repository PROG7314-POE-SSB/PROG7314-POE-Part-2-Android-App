<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_nav_graph"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.ssba.pantrychef.discover.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover">

        <action
            android:id="@+id/action_discoverFragment_to_SavedRecipesFragment"
            app:destination="@id/SavedRecipesFragment" />

    </fragment>

    <!-- Define all the other screen fragments as destinations -->
    <fragment
        android:id="@+id/SavedRecipesFragment"
        android:name="com.ssba.pantrychef.discover.saved_recipes.SavedRecipesFragment"
        android:label="Saved Recipes"
        tools:layout="@layout/fragment_saved_recipes">

        <action
            android:id="@+id/action_SavedRecipesFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.ssba.pantrychef.discover.saved_recipes.RecipeListFragment"
        android:label="Recipe List"
        tools:layout="@layout/fragment_recipe_list">

        <action
            android:id="@+id/action_recipeListFragment_to_createRecipeFragment"
            app:destination="@id/createRecipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/createRecipeFragment"
        android:name="com.ssba.pantrychef.discover.saved_recipes.CreateRecipeFragment"
        android:label="Create Recipe"
        tools:layout="@layout/fragment_create_recipe" />

</navigation>