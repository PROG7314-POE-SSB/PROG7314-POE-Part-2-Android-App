<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/home_nav_graph">

    <include app:graph="@navigation/home_nav_graph" />
    <include app:graph="@navigation/discover_nav_graph" />
    <include app:graph="@navigation/pantry_nav_graph" />
    <include app:graph="@navigation/shopping_nav_graph" />
    <include app:graph="@navigation/profile_nav_graph" />
    <action
        android:id="@+id/action_global_to_shopping_nav_graph"
        app:destination="@id/shopping_nav_graph">

        <!-- Arguments are defined on the action itself -->
        <argument
            android:name="recipeId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="categoryName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </action>


</navigation>
