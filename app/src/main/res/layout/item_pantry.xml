<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="4dp"
    android:background="@color/white_beige">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Left: Item image -->
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <!-- Right: Content -->
        <LinearLayout
            android:id="@+id/right_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/item_image"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- Item title -->
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apples"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brown_letters" />

            <!-- Item description -->
            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh red apples, perfect for snacks or pies."
                android:textSize="13sp"
                android:textColor="@color/brown_letters"
                android:layout_marginTop="4dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:textSize="13sp"
                android:textColor="@color/dark_brown"
                android:layout_marginTop="6dp" />

            <!-- Expiry + Quantity in one row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/item_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp: 15/9/2025"
                    android:textSize="12sp"
                    android:textColor="@color/dark_brown" />

                <TextView
                    android:id="@+id/item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Quantity: 3"
                    android:textSize="12sp"
                    android:textColor="@color/dark_brown"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
