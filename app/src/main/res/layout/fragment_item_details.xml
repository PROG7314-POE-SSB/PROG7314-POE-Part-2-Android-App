<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/beige_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apples"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/orange_main"
            android:layout_marginTop="12dp" />

        <!-- Category -->
        <TextView
            android:id="@+id/details_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit"
            android:textSize="14sp"
            android:textColor="@color/brown_letters"
            android:layout_marginTop="8dp" />

        <!-- Description / Notes -->
        <TextView
            android:id="@+id/details_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh red apples, perfect for snacks or pies."
            android:textSize="13sp"
            android:textColor="@color/brown_letters"
            android:layout_marginTop="8dp" />

        <!-- Expiry date -->
        <TextView
            android:id="@+id/details_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires: 05 Oct 2025"
            android:textSize="13sp"

            android:layout_marginTop="12dp" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/details_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 6"
            android:textSize="13sp"
            android:textColor="@color/brown_letters"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
