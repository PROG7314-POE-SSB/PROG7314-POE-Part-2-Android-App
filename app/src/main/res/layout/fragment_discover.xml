<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for the main DiscoverFragment.
    Team members working on the Discover feature will build the UI here.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discover.DiscoverFragment"
    android:background="@color/beige_bg">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Discover Recipes"
        android:textSize="20sp"
        android:textColor="@color/orange_main"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_pill"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="5dp"/>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_pill"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_margin="12dp"
        android:background="@drawable/search_pill_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search recipes"
            android:textColor="@color/orange_main"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search"
            android:padding="4dp"
            android:src="@drawable/ic_search"
            app:tint="@color/orange_main" />

    </LinearLayout>

    <!-- View Saved Recipes Button -->

    <!-- Recipes RecyclerView -->
    <Button
        android:id="@+id/btn_view_saved_recipes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/orange_main"
        android:text="View Saved Recipes"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_pill" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_recipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_saved_recipes" />

</androidx.constraintlayout.widget.ConstraintLayout>