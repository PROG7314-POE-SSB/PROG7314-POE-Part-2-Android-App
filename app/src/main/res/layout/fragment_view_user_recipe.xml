<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_bg"
    tools:context=".discover.saved_recipes.ViewUserRecipeFragment">

    <!-- Modern Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Back Button"
            android:src="@drawable/vector_arrow_back"
            app:tint="@color/orange_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Title with Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnShare"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack">

            <TextView
                android:id="@+id/tv_recipe_title_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Recipe Title"
                android:textColor="@color/orange_main"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Chocolate Chip Cookies" />

        </LinearLayout>

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Share Recipe"
            android:src="@drawable/ic_share"
            app:tint="@color/orange_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <!-- Enhanced Recipe Image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/orange_main"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Recipe Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_image" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Recipe Title Section -->
            <LinearLayout
                android:id="@+id/title_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_card"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_recipe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Title"
                    android:textColor="@color/orange_main"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="Chocolate Chip Cookies" />

                <!-- Recipe Details Row -->
                <LinearLayout
                    android:id="@+id/details_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_servings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/recipe_count_info_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:text="Serves 4"
                        android:textColor="@color/orange_main"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Serves 6" />

                    <TextView
                        android:id="@+id/tv_date_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/recipe_count_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:text="Oct 6, 2025"
                        android:textColor="@color/orange_main"
                        android:textSize="14sp"
                        tools:text="Oct 6, 2025" />

                </LinearLayout>

            </LinearLayout>

            <!-- Recipe Description -->
            <TextView
                android:id="@+id/tv_recipe_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="6dp"
                android:text="Recipe description goes here..."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_section"
                tools:text="Delicious homemade chocolate chip cookies that are crispy on the outside and chewy on the inside. Perfect for any occasion!" />

            <!-- Enhanced Ingredients Section -->
            <LinearLayout
                android:id="@+id/ingredients_header_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_description">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_shopping_list"
                    app:tint="@color/orange_main"
                    android:contentDescription="Ingredients Icon" />

                <TextView
                    android:id="@+id/tv_ingredients_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ingredients"
                    android:textColor="@color/orange_main"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Ingredients RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ingredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ingredients_header_section"
                tools:itemCount="1"
                tools:listitem="@layout/item_ingredient_view" />

            <!-- Enhanced Generate Shopping List Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate_shopping_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingVertical="14dp"
                android:text="Generate Shopping List"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/yellow"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                app:icon="@drawable/ic_shopping_list"
                app:iconSize="20dp"
                app:iconTint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_ingredients" />

            <!-- Enhanced Instructions Section -->
            <LinearLayout
                android:id="@+id/instructions_header_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_generate_shopping_list">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_chef_hat"
                    app:tint="@color/orange_main"
                    android:contentDescription="Instructions Icon" />

                <TextView
                    android:id="@+id/tv_instructions_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instructions"
                    android:textColor="@color/orange_main"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Instructions RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/instructions_header_section"
                tools:itemCount="1"
                tools:listitem="@layout/item_instruction_view" />

            <!-- Enhanced Chat with CulinaryGPT Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat_culinary_gpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:paddingVertical="14dp"
                android:text="Chat with CulinaryGPT"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/orange_main"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                app:icon="@drawable/ic_chat"
                app:iconSize="20dp"
                app:iconTint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_instructions" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>